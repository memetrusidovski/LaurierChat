<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fitsSystemWindows="true"
    tools:context=".MainActivity"
    android:background="@color/darkgrey"
    android:orientation="vertical"
    android:padding="20dp"


    >

    <LinearLayout
        android:id="@+id/temp1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Current Courses"
            android:textColor="#fff"
            android:textSize="36dp"
            android:fontFamily="@font/jetbrains"

            android:textStyle="bold">

        </TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Select your course"
            android:textColor="#fff"
            android:fontFamily="@font/jetbrains"

            android:textStyle="bold">


        </TextView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="20dp"
            app:cardCornerRadius="30dp">


            <RelativeLayout
                android:id="@+id/cp470button"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#6850a4"
                android:padding="30dp">

                <TextView
                    android:id="@+id/t1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="0dp"
                    android:layout_marginTop="-5dp"
                    android:fontFamily="@font/jetbrains"
                    android:text="CP470"
                    android:textColor="#f5f5f5"
                    android:textSize="20dp"

                    android:textStyle="bold">

                </TextView>

                <TextView
                    android:id="@+id/t2"
                    android:layout_width="wrap_content"
                    android:layout_height="19dp"
                    android:layout_below="@id/t1"
                    android:layout_marginLeft="0dp"
                    android:layout_marginTop="0dp"
                    android:fontFamily="@font/jetbrains"

                    android:text="Android Programming"
                    android:textColor="#ffff"

                    >

                </TextView>

                <ImageView
                    android:layout_width="54dp"
                    android:layout_height="41dp"
                    android:layout_alignParentRight="true"
                    android:maxHeight="100dp"
                    android:src="@drawable/android">

                </ImageView>
            </RelativeLayout>


        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="20dp"
            app:cardCornerRadius="30dp">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#6850a4"
                android:padding="30dp">

                <TextView
                    android:fontFamily="@font/jetbrains"

                    android:id="@+id/t3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="0dp"
                    android:layout_marginTop="-5dp"
                    android:text="CP312"
                    android:textColor="#f5f5f5"
                    android:textSize="20dp"
                    android:textStyle="bold">

                </TextView>

                <TextView
                    android:fontFamily="@font/jetbrains"

                    android:id="@+id/t4"
                    android:layout_width="wrap_content"
                    android:layout_height="19dp"
                    android:layout_below="@id/t3"
                    android:layout_marginLeft="0dp"
                    android:layout_marginTop="0dp"
                    android:text="Algorithm Design 1"
                    android:textColor="#ffff"

                    >

                </TextView>

                <ImageView
                    android:layout_width="54dp"
                    android:layout_height="41dp"
                    android:layout_alignParentRight="true"
                    android:maxHeight="100dp"
                    android:src="@drawable/graph">

                </ImageView>
            </RelativeLayout>


        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="20dp"
            app:cardCornerRadius="30dp">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#6850a4"
                android:padding="30dp">

                <TextView
                    android:id="@+id/t5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="0dp"
                    android:layout_marginTop="-5dp"
                    android:text="CP386"
                    android:textColor="#f5f5f5"
                    android:textSize="20dp"
                    android:fontFamily="@font/jetbrains"

                    android:textStyle="bold">

                </TextView>

                <TextView
                    android:id="@+id/t6"
                    android:layout_width="wrap_content"
                    android:layout_height="19dp"
                    android:layout_below="@id/t5"
                    android:layout_marginLeft="0dp"
                    android:layout_marginTop="0dp"
                    android:fontFamily="@font/jetbrains"

                    android:text="Operating Systems"
                    android:textColor="#ffff"

                    >

                </TextView>

                <ImageView
                    android:layout_width="54dp"
                    android:layout_height="41dp"
                    android:layout_alignParentRight="true"
                    android:maxHeight="100dp"
                    android:src="@drawable/penguin">

                </ImageView>
            </RelativeLayout>


        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="20dp"
            app:cardCornerRadius="30dp">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#6850a4"
                android:padding="30dp">

                <TextView
                    android:id="@+id/t7"
                    android:fontFamily="@font/jetbrains"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="0dp"
                    android:layout_marginTop="-5dp"
                    android:text="CP363"
                    android:textColor="#f5f5f5"
                    android:textSize="20dp"
                    android:textStyle="bold">

                </TextView>

                <TextView
                    android:id="@+id/t8"
                    android:fontFamily="@font/jetbrains"

                    android:layout_width="wrap_content"
                    android:layout_height="19dp"
                    android:layout_below="@id/t7"
                    android:layout_marginLeft="0dp"
                    android:layout_marginTop="0dp"
                    android:text="Database 1"
                    android:textColor="#ffff"

                    >

                </TextView>

                <ImageView
                    android:layout_width="54dp"
                    android:layout_height="41dp"
                    android:layout_alignParentRight="true"
                    android:maxHeight="100dp"
                    android:src="@drawable/sqldb">

                </ImageView>
            </RelativeLayout>


        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="20dp"
            app:cardCornerRadius="30dp">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#6850a4"
                android:padding="30dp">

                <TextView
                    android:id="@+id/t10"
                    android:fontFamily="@font/jetbrains"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="0dp"
                    android:layout_marginTop="-5dp"
                    android:text="CP414"
                    android:textColor="#f5f5f5"
                    android:textSize="20dp"
                    android:textStyle="bold">

                </TextView>

                <TextView
                    android:id="@+id/t11"
                    android:fontFamily="@font/jetbrains"

                    android:layout_width="wrap_content"
                    android:layout_height="19dp"
                    android:layout_below="@id/t10"
                    android:layout_marginLeft="0dp"
                    android:layout_marginTop="0dp"
                    android:text="Foundations of Computing"
                    android:textColor="#ffff"

                    >

                </TextView>

                <ImageView
                    android:layout_width="54dp"
                    android:layout_height="41dp"
                    android:layout_alignParentRight="true"
                    android:maxHeight="100dp"
                    android:src="@drawable/binary">

                </ImageView>
            </RelativeLayout>


        </androidx.cardview.widget.CardView>



    </LinearLayout>


</LinearLayout>

